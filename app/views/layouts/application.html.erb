<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Message Me" %></title>
    <%# https://gauger.io/fonticon/ %>
    <%# Load custom fav icon. Ensure 'load path' is defined in package.json %>
    <%= favicon_link_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= action_cable_meta_tag %>
    <%= yield :head %>


    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%#= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "semantic.min.css", "data-turbo-track": "reload" %>
    <%#= stylesheet_link_tag "fomantic-ui-css/semantic.min.css", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "custom", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%#= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
    <%#= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <%#= javascript_include_tag "dist/jquery.min.js", "data-turbo-track": "reload", defer: true %>
    <%#= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
    <%#= javascript_include_tag "semantic.min.js", "data-turbo-track": "reload", defer: true %>
    
  </head>

  <body>

    <div class= "ui segments horizontal basic">

      <!-- reduce padding to fill out segment -->
      <div class= "ui segment compact" style= "padding: 2px;">

        <!-- table-cell to fit in segment -->
        <div class="ui menu vertical inverted small" style= "display: table-cell; height: 500px">

          <div class="item">
            <div class="header">Users</div>
            <div class="menu">
              <div class="item">
                <div class="ui button fluid small inverted basic pink">Sign up</div>
              </div>
              <div class="item">
                <%= link_to "Login", login_path, class: "ui button fluid small inverted basic" %>
              </div>
            </div>

            <div class= "ui item">
              <div class= "ui dropdown fluid floating">
                <i class= "icon dropdown"></i>
                Account 
                <div class="ui menu fluid">
                  
                  <% if logged_in? %>
                    <%= link_to "Logout", logout_path, class: "item", data: {turbo_method: :delete} %>
                  <% end %>
                  <div class= "item">Other</div>
                </div>
              </div>
            </div>
            
          </div>

          <div class="item">
            <div class="header">Nav</div>
            <div class="menu">
              <%= link_to "Chatroom", root_path, class: "item" %>
            </div>
          </div>

          <div class="item">
            <div class="header">Support</div>
            <div class="menu">
              <a class="item">E-mail Support</a>
              <a class="item"><i class="ca flag">FAQs</i></a>
            </div>
          </div>

        </div> <!-- menu side bar -->

      </div> <!-- segment -->
    
      <div class= "ui segment">
        <%= render "layouts/messages" %>
        <%= yield %>
      </div>

    </div> <!-- segments horizontal -->

  </body>

</html>
